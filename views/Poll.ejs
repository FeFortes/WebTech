        <% for(var i=0; i < polls.length; i++) { %>
            <div class="pollStrip" id="pollStrip<%= polls[i].id %>">
                <div class="selectVote">
                    <ul class="yesOrNo">
                        <li class="yes" onclick="submitVote(<%= polls[i].id %>, 1)" id="yes_id<%= polls[i].id %>"><a><%= polls[i].yes %></a></li>
                        <li class="no" onclick="submitVote(<%= polls[i].id %>, 0)" id="no_id<%= polls[i].id %>"><a><%= polls[i].no %></a></li>
                    </ul>
                </div>
                <div class="pollText">
                    <div class="circular--portrait">
                        <img src="../img/Icons/ProfilePicture.png" id="profilePicture" alt="profilePicture"/>
                    </div> 
                    <!--
                    <div id="usernameContent">
                        <ul id="usernameContentList">
                            <li>Username</li>
                            <li>Date</li>
                        </ul>
                    </div> */
                    -->
                    <p id="usernamePoll"><%= polls[i].username %>, <%= polls[i].date %>, id: <%= polls[i].id %></p>
                    <p class="textPoll"><%= polls[i].text %></p>
                </div>
            </div>
        <% } %>
    </div>
    <button type="button" onclick="loadPolls(document.getElementById('pollsSpace').childElementCount-1)" id="buttonLoadPolls">Load more polls</button>
</div>

</body>
    
<script src="../js/poll.js"></script>
    
</html>